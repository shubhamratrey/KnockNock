<resources>
    <!-- Base application theme. -->
    <style name="Theme.KnockNock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/linen</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.KnockNock.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="Theme.KnockNock.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/linen</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KnockNock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KnockNock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressWhiteTheme" parent="Theme.KnockNock.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ProgressTheme" parent="Theme.KnockNock.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ToolBarText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>