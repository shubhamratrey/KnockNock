<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/rootLayout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/white"    android:orientation="vertical"    tools:background="@color/linen">    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/titleTv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="18dp"        android:fontFamily="@font/notosans_regular"        android:paddingStart="15dp"        android:paddingEnd="15dp"        android:textColor="@color/river_bed_40"        android:textSize="@dimen/_12ssp"        tools:text="Current Task" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/rcvAll"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:layout_marginTop="15dp"        android:clipToPadding="false"        android:paddingStart="16dp"        android:paddingEnd="16dp"        tools:itemCount="2" /></LinearLayout>