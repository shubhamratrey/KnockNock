<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileHorCont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="0dp"
    android:visibility="visible"
    tools:visibility="visible">

    <include
        android:id="@+id/userImageIv1"
        layout="@layout/layout_contact"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_user_name1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userImageIv1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackground"
            android:drawablePadding="10dp"
            android:ellipsize="none"
            android:fadingEdgeLength="40dp"
            android:fontFamily="@font/notosans_bold"
            android:padding="4dp"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:text="Shubham Ratrey"
            android:textColor="@color/swamp"
            android:textSize="@dimen/_16ssp"
            tools:text="Minato Namikaze" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/premiumBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="@dimen/_5sdp"
            android:visibility="invisible"
            app:srcCompat="@drawable/common_google_signin_btn_text_disabled" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userStatus1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.7"
        android:background="?selectableItemBackground"
        android:ellipsize="end"
        android:fontFamily="@font/notosans_medium"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp"
        android:requiresFadingEdge="horizontal"
        android:text="+918109212607"
        android:textColor="@color/swamp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userImageIv1"
        app:layout_constraintTop_toBottomOf="@+id/ll_user_name1"
        tools:text="ADD A SHORT BIO" />


</androidx.constraintlayout.widget.ConstraintLayout>