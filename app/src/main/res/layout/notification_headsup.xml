<!-- We have to set the height to 64dp, this is the rule of the small notification --><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/linen"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="15dp"        android:layout_marginTop="10dp"        android:layout_marginEnd="15dp"        android:gravity="center_vertical">        <ImageView            android:layout_width="20dp"            android:layout_height="20dp"            android:src="@drawable/ic_launcher_foreground" />        <TextView            android:id="@+id/headsup_userrname"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="10dp"            android:fontFamily="@font/notosans_regular"            android:text="New Knock â€¢ @shubh"            android:textSize="12sp" />    </LinearLayout>    <LinearLayout        android:id="@+id/notif_small"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="15dp"        android:layout_marginEnd="15dp"        android:gravity="center_vertical"        android:orientation="horizontal"        android:paddingTop="10dp"        android:paddingBottom="10dp">        <ImageView            android:id="@+id/headsup_icon"            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/ic_launcher_foreground" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="15dp"            android:layout_toEndOf="@id/headsup_icon"            android:gravity="center_vertical"            android:orientation="vertical">            <TextView                android:id="@+id/headsup_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="@font/notosans_medium"                android:singleLine="true"                android:text="@string/app_name"                android:textColor="@color/swamp"                android:textSize="15sp" />            <TextView                android:id="@+id/headsup_desc"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="@font/notosans_regular"                android:singleLine="true"                android:text="Content"                android:textColor="#575757"                android:textSize="15sp" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0.7dp"        android:layout_marginStart="15dp"        android:layout_marginEnd="15dp"        android:background="#B8B8B8" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="15dp"        android:layout_marginEnd="15dp">        <TextView            android:id="@+id/headsup_knockback_tv"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:fontFamily="@font/notosans_bold"            android:paddingTop="7dp"            android:paddingEnd="30dp"            android:paddingBottom="20dp"            android:singleLine="true"            android:text="Knock Back"            android:textColor="@color/coral"            android:textSize="15sp" />    </LinearLayout></LinearLayout>