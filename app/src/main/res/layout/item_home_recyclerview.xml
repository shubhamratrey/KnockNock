<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/rootLayout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/fui_transparent"    android:orientation="vertical"    tools:background="@color/background">    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/titleTv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="18dp"        android:paddingStart="15dp"        android:paddingEnd="15dp"        android:textColor="@color/black"        android:textSize="18sp"        tools:text="Current Task" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/rcvAll"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="7dp"        android:layout_marginBottom="20dp"        android:clipToPadding="false"        android:paddingStart="15dp"        android:paddingEnd="15dp"        tools:itemCount="2" /></LinearLayout>